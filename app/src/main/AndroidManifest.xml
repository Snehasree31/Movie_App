<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.example.movieapplication">

    <uses-permission android:name="android.permission.INTERNET" />

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/Theme.MovieApplication"
        android:usesCleartextTraffic="true">
        <activity
            android:name=".MenupageActivity"
            android:exported="false" />
        <activity
            android:name=".FavMovieDisplayActivity"
            android:exported="false" />
        <activity
            android:name=".MovieDisplayActivity"
            android:exported="false" />
        <activity
            android:name=".LoginAndRegister.Login"
            android:exported="false" />
        <activity
            android:name=".LoginAndRegister.Register"
            android:exported="false" />
        <activity
            android:name=".StartActivity"
            android:exported="true">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
    </application>

</manifest>